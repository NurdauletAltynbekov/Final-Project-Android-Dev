<!--            app:layout_constraintRight_toRightOf="parent"/>-->

        <TextView
            android:id="@+id/country_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/country_id"
            app:layout_constraintBottom_toTopOf="@id/country_slug"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/country_slug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slug"
            android:textSze="@dimen/text_size"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/country_id"
            app:layout_constraintBottom_toTopOf="@id/country_is02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


